{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist/out-tsc",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"]
}
